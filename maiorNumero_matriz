algoritmo "Maior Número_Matriz"
// Função :
// Autor : Pedro Victor
// Data : 21/03/2021
// Seção de Declarações 
var
numeros: vetor[1..5, 1..5] de inteiro
i, j, maior: inteiro
inicio
// Seção de Comandos

   maior <- 0
   
   para i<- 1 ate 5 faca
        para j <- 1 ate 5 faca
             escreval("DIGITE UM NÚMERO")
             leia(numeros[i,j])
        fimpara
        escreval()
   fimpara

   para i<- 1 ate 5 faca
        para j<- 1 ate 5 faca
           se numeros[i,j] > maior entao
                maior <- numeros[i,j]
           fimse
        fimpara
   fimpara
   

   escreval("O MAIOR NÚMERO É ", maior)
fimalgoritmo
